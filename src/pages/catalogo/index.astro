---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const products = await getCollection("products");
const featured = products.filter((p) => p.data.featured);
const all = products;
---

<BaseLayout
  title="Catálogo"
  description="Catálogo de produtos e serviços da Casa Nacoli em Lajeado/RS. Personalizados, impressos, identidade visual, sites e decoração."
  canonicalPath="/catalogo"
>
  <h1 class="text-3xl font-semibold tracking-tight">Catálogo</h1>
  <p class="mt-3 max-w-2xl text-zinc-700">
    Produtos e serviços da Casa Nacoli. Selecione um item para ver detalhes e pedir orçamento no
    WhatsApp.
  </p>

  {
    featured.length ? (
      <section class="mt-10">
        <h2 class="text-xl font-semibold">Destaques</h2>
        <div class="mt-4 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
          {featured.map((p) => (
            <a
              class="rounded-lg border border-zinc-200 bg-white p-5 hover:border-zinc-300"
              href={`/catalogo/${p.slug}`}
            >
              <div class="font-medium">{p.data.title}</div>
              <div class="mt-2 text-sm text-zinc-700">{p.data.summary}</div>
            </a>
          ))}
        </div>
      </section>
    ) : null
  }

  <section class="mt-12">
    <h2 class="text-xl font-semibold">Todos</h2>
    <div class="mt-4 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {
        all.map((p) => (
          <a
            class="rounded-lg border border-zinc-200 bg-white p-5 hover:border-zinc-300"
            href={`/catalogo/${p.slug}`}
          >
            <div class="font-medium">{p.data.title}</div>
            <div class="mt-2 text-sm text-zinc-700">{p.data.summary}</div>
          </a>
        ))
      }
    </div>
  </section>
</BaseLayout>
