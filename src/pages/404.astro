---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Button from "@/components/ui/Button.astro";
import Section from "@/components/ui/Section.astro";
import BackgroundDecorations from "@/components/ui/BackgroundDecorations.astro";

const title = "Página não encontrada | Casa Nacoli";
const description = "A página que você procurou não existe.";
---

<BaseLayout title={title} description={description} canonicalPath="/404" showCTA={false}>
  <Section
    class="relative z-0 overflow-hidden flex min-h-[60vh] flex-col items-center justify-center text-center"
  >
    <BackgroundDecorations />
    <h1 class="text-4xl font-bold tracking-tight md:text-6xl text-[var(--cn-ink)]">404</h1>
    <p class="mt-4 text-lg text-black/70">Oops! Parece que esta página não existe.</p>
    <div class="mt-8">
      <Button href="/">Voltar para o início</Button>
    </div>
  </Section>
</BaseLayout>
