---
const nav = [
  { href: "/", label: "Início" },
  { href: "/catalogo", label: "Catálogo" },
  { href: "/sobre", label: "Sobre" },
  { href: "/contato", label: "Contato" },
];
---

<header class="border-b border-zinc-200 bg-white">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-4">
    <a href="/" class="font-semibold tracking-tight text-zinc-900">Casa Nacoli</a>

    <nav class="hidden gap-6 text-sm text-zinc-700 md:flex">
      {
        nav.map((item) => (
          <a href={item.href} class="hover:text-zinc-900">
            {item.label}
          </a>
        ))
      }
    </nav>

    <a
      href="/contato"
      class="rounded-md bg-zinc-900 px-3 py-2 text-sm font-medium text-white hover:bg-zinc-800"
    >
      Orçamento
    </a>
  </div>
</header>
