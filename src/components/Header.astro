---
const nav = [
  { href: "/", label: "Início" },
  { href: "/catalogo", label: "Catálogo" },
  { href: "/sobre", label: "Sobre" },
  { href: "/contato", label: "Contato" },
];
---

<header class="sticky top-0 z-50 border-b border-black/5 bg-[var(--cn-cream)]/90 backdrop-blur">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-4">
    <a href="/" class="flex items-center gap-3">
      <div class="grid size-10 place-items-center rounded-xl bg-white/60 ring-1 ring-black/5">
        <span class="text-sm font-semibold tracking-tight text-[var(--cn-terracotta)]">CN</span>
      </div>
      <div class="leading-tight">
        <div class="text-sm font-semibold tracking-tight text-[var(--cn-ink)]">Casa Nacoli</div>
        <div class="text-xs text-black/60">gráfica artesanal independente</div>
      </div>
    </a>

    <nav class="hidden items-center gap-6 text-sm text-black/70 md:flex">
      {
        nav.map((item) => (
          <a class="hover:text-[var(--cn-ink)]" href={item.href}>
            {item.label}
          </a>
        ))
      }
    </nav>

    <a
      href="/contato"
      class="rounded-xl bg-[var(--cn-ink)] px-4 py-2 text-sm font-medium text-[var(--cn-cream)] hover:bg-black/80"
    >
      Pedir orçamento
    </a>
  </div>
</header>
