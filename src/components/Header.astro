---
import Button from "@/components/ui/Button.astro";
import { SITE } from "@/shared/config/site";

const nav = [
  { href: `${import.meta.env.BASE_URL}`, label: "Início" },
  { href: `${import.meta.env.BASE_URL}catalogo`, label: "Catálogo" },
  { href: `${import.meta.env.BASE_URL}sobre`, label: "Sobre" },
  { href: `${import.meta.env.BASE_URL}portfolio`, label: "Portfólio" },
  { href: `${import.meta.env.BASE_URL}contato`, label: "Contato" },
];
---

<header
  class="sticky top-0 z-50 border-b border-black/5 bg-[var(--cn-cream)]/90 backdrop-blur shadow-lg"
>
  <div class="mx-auto flex h-16 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8">
    <a href={import.meta.env.BASE_URL} class="flex items-center gap-3">
      <div class="size-10 overflow-hidden rounded-xl bg-white/60 ring-1 ring-black/5">
        <img
          src={`${import.meta.env.BASE_URL}images/brand/logo.webp`}
          alt="Logo Casa Nacoli"
          class="h-full w-full object-cover"
        />
      </div>
      <div class="leading-tight">
        <div class="text-sm font-semibold tracking-tight text-[var(--cn-ink)]">{SITE.name}</div>
        <div class="text-xs text-black/60">gráfica artesanal independente</div>
      </div>
    </a>

    <nav class="hidden items-center gap-8 text-sm font-medium text-black/70 md:flex">
      {
        nav.map((item) => (
          <a class="transition-colors hover:text-[var(--cn-ink)]" href={item.href}>
            {item.label}
          </a>
        ))
      }
    </nav>

    <div class="flex items-center gap-4">
      <Button href={`${import.meta.env.BASE_URL}contato`} size="sm" class="hidden sm:inline-flex">
        Pedir orçamento
      </Button>
      {/* Mobile menu button could go here */}
    </div>
  </div>
</header>
