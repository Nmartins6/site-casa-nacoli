---
interface Props {
  variant?: "primary" | "secondary" | "outline" | "ghost";
  size?: "sm" | "md" | "lg";
  href?: string;
  class?: string;
  [key: string]: any;
}

const { variant = "primary", size = "md", href, class: className, ...rest } = Astro.props;

const baseStyles =
  "inline-flex items-center justify-center rounded-full font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[var(--cn-ink)] disabled:pointer-events-none disabled:opacity-50";

const variants = {
  primary: "bg-[var(--cn-ink)] text-[var(--cn-cream)] hover:bg-black/80",
  secondary: "bg-[var(--cn-mustard)] text-[var(--cn-ink)] hover:bg-[#cda650]",
  outline:
    "border-2 border-[var(--cn-ink)] text-[var(--cn-ink)] hover:bg-[var(--cn-ink)] hover:text-[var(--cn-cream)]",
  ghost: "text-[var(--cn-ink)] hover:bg-[var(--cn-ink)]/10",
};

const sizes = {
  sm: "h-9 px-4 text-sm",
  md: "h-11 px-8 text-base",
  lg: "h-14 px-10 text-lg",
};

const classes = [baseStyles, variants[variant], sizes[size], className].join(" ");

const Element = href ? "a" : "button";
---

<Element href={href} class={classes} {...rest}>
  <slot />
</Element>
