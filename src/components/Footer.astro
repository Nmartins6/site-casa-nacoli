---
import { buildWhatsAppLink } from "@/shared/lib/whatsapp";

const whatsappHref = buildWhatsAppLink(
  "Olá! Vim pelo site da Casa Nacoli e gostaria de um orçamento.",
);
---

<footer class="mt-16 border-t border-black/5 bg-[var(--cn-cream)]">
  <div class="mx-auto grid max-w-6xl gap-10 px-4 py-12 md:grid-cols-3">
    <div>
      <div class="text-base font-semibold tracking-tight text-[var(--cn-ink)]">Casa Nacoli</div>
      <p class="mt-3 text-sm leading-relaxed text-black/70">
        Gráfica artesanal independente em <strong>Lajeado/RS</strong>. Personalizados, impressos,
        identidade visual e sites.
      </p>
    </div>

    <div>
      <div class="text-base font-semibold tracking-tight text-[var(--cn-ink)]">Contato</div>
      <p class="mt-3 text-sm text-black/70">
        WhatsApp:
        <a
          class="font-medium text-[var(--cn-terracotta)] hover:underline"
          href={whatsappHref}
          target="_blank"
          rel="noreferrer"
        >
          (51) 98962-3134
        </a>
      </p>
      <p class="mt-2 text-sm text-black/70">Atendimento: a combinar</p>
    </div>

    <div>
      <div class="text-base font-semibold tracking-tight text-[var(--cn-ink)]">Links</div>
      <div class="mt-3 flex flex-col gap-2 text-sm">
        <a class="text-black/70 hover:text-[var(--cn-ink)]" href="/catalogo">Catálogo</a>
        <a class="text-black/70 hover:text-[var(--cn-ink)]" href="/sobre">Sobre</a>
        <a class="text-black/70 hover:text-[var(--cn-ink)]" href="/contato">Contato</a>
      </div>
    </div>
  </div>

  <div class="border-t border-black/5 py-6">
    <div
      class="mx-auto flex max-w-6xl flex-col gap-2 px-4 text-xs text-black/60 md:flex-row md:items-center md:justify-between"
    >
      <div>© {new Date().getFullYear()} Casa Nacoli — Lajeado/RS</div>
      <div class="text-black/50">Feito com Astro + Tailwind</div>
    </div>
  </div>
</footer>
