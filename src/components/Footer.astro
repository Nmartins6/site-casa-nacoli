---
import { SITE } from "@/shared/config/site";
import { buildWhatsAppLink } from "@/shared/lib/whatsapp";

const whatsappHref = buildWhatsAppLink(
  "Olá! Vim pelo site da Casa Nacoli e gostaria de um orçamento.",
);
---

<footer class="mt-auto border-t border-black/5 bg-[var(--cn-cream)]">
  <div class="mx-auto grid max-w-7xl gap-10 px-4 py-16 sm:px-6 md:grid-cols-4 lg:px-8">
    <div class="md:col-span-2">
      <div class="flex items-center gap-2">
        <div class="grid size-8 place-items-center rounded-lg bg-white/60 ring-1 ring-black/5">
          <span class="text-xs font-semibold tracking-tight text-[var(--cn-terracotta)]">CN</span>
        </div>
        <span class="text-base font-semibold tracking-tight text-[var(--cn-ink)]">{SITE.name}</span>
      </div>
      <p class="mt-4 max-w-sm text-sm leading-relaxed text-black/70">
        {SITE.description}
      </p>
    </div>

    <div>
      <div class="font-semibold tracking-tight text-[var(--cn-ink)]">Contato</div>
      <ul class="mt-4 space-y-3 text-sm text-black/70">
        <li>
          <a
            class="flex items-center gap-2 hover:text-[var(--cn-ink)]"
            href={whatsappHref}
            target="_blank"
            rel="noreferrer"
          >
            <span>WhatsApp</span>
            <span class="font-medium text-[var(--cn-terracotta)]">{SITE.contact.whatsapp}</span>
          </a>
        </li>
        <li>
          <a class="hover:text-[var(--cn-ink)]" href={`mailto:${SITE.contact.email}`}>
            {SITE.contact.email}
          </a>
        </li>
        <li>
          <span>{SITE.address.city}/{SITE.address.state}</span>
        </li>
      </ul>
    </div>

    <div>
      <div class="font-semibold tracking-tight text-[var(--cn-ink)]">Navegação</div>
      <ul class="mt-4 space-y-3 text-sm text-black/70">
        <li><a class="hover:text-[var(--cn-ink)]" href="/catalogo">Catálogo</a></li>
        <li><a class="hover:text-[var(--cn-ink)]" href="/sobre">Sobre a Casa</a></li>
        <li><a class="hover:text-[var(--cn-ink)]" href="/portfolio">Portfólio</a></li>
        <li><a class="hover:text-[var(--cn-ink)]" href="/contato">Contato</a></li>
      </ul>
    </div>
  </div>

  <div class="border-t border-black/5 bg-black/[0.02] py-8">
    <div
      class="mx-auto flex max-w-7xl flex-col gap-4 px-4 text-xs text-black/50 sm:px-6 md:flex-row md:items-center md:justify-between lg:px-8"
    >
      <div>© {new Date().getFullYear()} {SITE.name}. Todos os direitos reservados.</div>
      <div class="flex gap-4">
        <a href="/politica-de-privacidade" class="hover:text-[var(--cn-ink)]">Privacidade</a>
        <a href="/termos" class="hover:text-[var(--cn-ink)]">Termos de Uso</a>
      </div>
    </div>
  </div>
</footer>
