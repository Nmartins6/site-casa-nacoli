---
import Section from "@/components/ui/Section.astro";

interface Props {
  title: string;
  description?: string;
  backgroundImage?: string;
  class?: string;
}

const {
  title,
  description,
  backgroundImage = "/images/background/background.webp",
  class: className,
} = Astro.props;
---

<Section class:list={["relative overflow-hidden pt-24 pb-20 md:pt-32 md:pb-24", className]}>
  <!-- Background Image -->
  <div
    class="absolute inset-0 -z-20 h-full w-full bg-cover bg-center"
    style={`background-image: url('${backgroundImage}');`}
  >
  </div>
  <div class="absolute inset-0 -z-10 h-full w-full bg-white/60 backdrop-blur-sm"></div>

  <!-- Decorative Blurs -->
  <div
    class="absolute right-0 top-0 -z-10 size-96 translate-x-1/3 -translate-y-1/3 rounded-full bg-[var(--cn-sky)]/30 blur-3xl"
  >
  </div>
  <div
    class="absolute bottom-0 left-0 -z-10 size-96 -translate-x-1/3 translate-y-1/3 rounded-full bg-[var(--cn-mustard)]/20 blur-3xl"
  >
  </div>

  <div class="mx-auto max-w-4xl text-center">
    <h1 class="text-4xl font-bold tracking-tight text-[var(--cn-ink)] md:text-5xl lg:text-6xl">
      {title}
    </h1>
    {description && <p class="mx-auto mt-6 max-w-2xl text-lg text-black/70">{description}</p>}
    <slot />
  </div>
</Section>
