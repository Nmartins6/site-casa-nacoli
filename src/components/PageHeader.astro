---
import Section from "@/components/ui/Section.astro";
import ScrollIndicator from "@/components/ui/ScrollIndicator.astro";
import BackgroundDecorations from "@/components/ui/BackgroundDecorations.astro";

interface Props {
  title: string;
  description?: string;
  backgroundImage?: string;
  class?: string;
  containerClass?: string;
}

const {
  title,
  description,
  backgroundImage = "/images/background/background.webp",
  class: className,
  containerClass,
} = Astro.props;
---

<Section
  class:list={["relative z-0 overflow-hidden pt-24 pb-20 md:pt-32 md:pb-24", className]}
  containerClass={containerClass}
>
  <BackgroundDecorations />

  <div class="mx-auto max-w-4xl text-center">
    <h1 class="text-4xl font-bold tracking-tight text-[var(--cn-ink)] md:text-5xl lg:text-6xl">
      {title}
    </h1>
    {description && <p class="mx-auto mt-6 max-w-2xl text-lg text-black/70">{description}</p>}
    <slot />
  </div>

  <ScrollIndicator />
</Section>
