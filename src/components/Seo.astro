---
type Props = {
  title: string;
  description: string;
  canonicalPath?: string;
};

const { title, description, canonicalPath } = Astro.props;

// Se você tiver um domínio final, trocamos isso depois.
// Por enquanto, deixamos vazio e usamos canonicalPath só como caminho.
const SITE_NAME = "Casa Nacoli";
const BASE_URL = ""; // ex.: "https://www.casanacoli.com.br"

const fullTitle = title.includes(SITE_NAME) ? title : `${title} | ${SITE_NAME}`;
const canonical = BASE_URL && canonicalPath ? `${BASE_URL}${canonicalPath}` : undefined;
---

<title>{fullTitle}</title>
<meta name="description" content={description} />

{canonical ? <link rel="canonical" href={canonical} /> : null}

<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:type" content="website" />
